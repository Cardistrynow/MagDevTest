<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingHorizontal="@dimen/half_default_margin"
    android:paddingVertical="@dimen/default_margin">

    <TextView
        android:id="@+id/weekDayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white70"
        android:textSize="@dimen/google_title_text_size"
        tools:text="Пн"/>

    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/quarter_default_margin"
        android:textSize="@dimen/google_title_text_size"
        tools:text="02"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/half_default_margin"
        android:background="@color/dividerLight"
        app:layout_constraintTop_toBottomOf="@+id/feelLikeText"/>

    <LinearLayout
        android:id="@+id/weatherLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/quarter_default_margin"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/degText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="@dimen/google_subhead_text_size"
            tools:text="24°C"/>

        <ImageView
            android:id="@+id/weatherIcon"
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"/>

    </LinearLayout>

</LinearLayout>