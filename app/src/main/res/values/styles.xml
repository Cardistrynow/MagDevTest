<resources>

    <style name="TitlePrimaryMediumLightText">
        <item name="android:textSize">@dimen/google_title_text_size</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitlePrimaryMediumText">
        <item name="android:textSize">@dimen/google_title_text_size</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black87</item>
    </style>

    <style name="SubheadingText">
        <item name="android:textSize">@dimen/google_subhead_text_size</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black87</item>
    </style>

    <style name="BodyPrimaryText">
        <item name="android:textSize">@dimen/google_body_text_size</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black87</item>
    </style>

    <style name="BodyPrimaryMediumText">
        <item name="android:textSize">@dimen/google_body_text_size</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black87</item>
    </style>

    <style name="BodySecondaryText">
        <item name="android:textSize">@dimen/google_body_text_size</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black54</item>
    </style>

    <style name="BodySecondaryLightText" parent="BodySecondaryText">
        <item name="android:textColor">@color/white70</item>
    </style>

    <style name="CaptionSecondaryText">
        <item name="android:textSize">@dimen/google_caption_text_size</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black54</item>
    </style>


    <!-- View Styles -->

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/google_subhead_text_size</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/default_margin</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
    </style>

    <style name="Button.Small" parent="Button">
        <item name="android:textSize">@dimen/google_body_text_size</item>
        <item name="android:padding">@dimen/quarter_default_margin</item>
    </style>

    <style name="TextInputLayout.Light" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/TextInputLayout.TextAppearance.Light</item>
        <item name="android:textColorHint">@color/white50</item>
    </style>

    <style name="TextInputLayout.Dark" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/TextInputLayout.TextAppearance.Dark</item>
        <item name="android:textColorHint">@color/black38</item>
    </style>

    <style name="TextInputLayout.TextAppearance.Light" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/google_caption_text_size</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextInputLayout.TextAppearance.Dark" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/google_caption_text_size</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black87</item>
    </style>

    <style name="TextInputEditText.Light" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/white</item>
        
        <item name="colorControlNormal">@color/white50</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="TextInputEditText.Dark" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/black87</item>

        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>

</resources>
